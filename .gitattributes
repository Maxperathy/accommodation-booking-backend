# Set default behavior to automatically normalize line endings
* text=auto

# Force LF line endings for text files
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Force LF for configuration files
*.gitignore text eol=lf
*.env.example text eol=lf
*.editorconfig text eol=lf

# Force LF for shell scripts
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Package lock files should use LF
package-lock.json text eol=lf
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf

